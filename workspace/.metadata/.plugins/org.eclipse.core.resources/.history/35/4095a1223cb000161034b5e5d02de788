
public class test {

        public static void main(String args[]) 
        {    
             int sum = 0;
             for (int i = 0, j = 0; i < 5 & j < 5; ++i, j = i + 1){
                 sum += i;
             System.out.print("i: " + i);
             System.out.print("and j: " + j);
             System.out.println(" ");
 	     System.out.println(sum);}
        } 
    }
    
	

